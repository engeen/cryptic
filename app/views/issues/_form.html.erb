  <p>
  <% issue.errors.full_messages.each do |m|%>
    <%= m %>;
  <% end %>
  </p>
  <p class='phone <%= "field_with_errors" unless issue.errors[:phone].empty? %>'>
    <%= "ID: #{issue.id}" if issue.id%>
    <%= f.label :phone %> 
    <span class="field_error_message">
      <%= issue.errors[:phone].join(", ") if issue.errors[:phone].present? %>
    </span><br />
    <%= f.text_field :phone, :onblur => "$(this.form).submit();", :disabled => !issue.new_record? %>
  </p>


    <%= render "extended_form", :f =>f, :issue => issue unless issue.new_record? %>
  </div>
  <div style='clear: both'> </div>
