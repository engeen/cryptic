<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%# javascript_include_tag :defaults %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <% if flash.count > 0 %>
    <div id="flash">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
    </div>
    <% end %>
    
    <div id="head">
    
      <% if @account %>
        <%= link_to current_user.email, account_url(@account) if signed_in?%>
      <% else%>
        <%= link_to current_user.email, "#" if signed_in? %>
      <% end %>
      <%= link_to "Выйти", destroy_user_session_path, :method => :delete if signed_in? %>
      <%= link_to "Войти", new_user_session_path unless  signed_in? %>
      
    </div>
    
    <div id="container">
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
